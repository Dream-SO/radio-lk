<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dreamso.radio.MainActivity">

    <ImageView
        android:id="@+id/applogo"
        android:layout_width="450dp"
        android:layout_height="300dp"
        android:layout_alignTop="@+id/tagline"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="61dp"
        android:layout_marginRight="61dp"
        android:gravity="center"
        app:srcCompat="@drawable/radiologo" />


    <ImageView
        android:id="@+id/voldowns"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@+id/applogo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="128dp"
        android:src="@drawable/ic_volume_up_black_24dp" />


    <ImageView
        android:id="@+id/volup"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@+id/applogo"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="1dp"
        android:src="@drawable/ic_volume_down_black_24dp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="180dp"
        android:layout_height="33dp"
        android:layout_below="@+id/applogo"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_toStartOf="@+id/voldowns"
        android:layout_toLeftOf="@+id/voldowns"
        android:layout_toEndOf="@+id/volup"
        android:layout_toRightOf="@+id/volup"
        android:progressTint="@color/colorPrimary"
        android:thumbTint="@color/colorPrimary" />


    <ImageButton
        android:id="@+id/playTrigger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="0dp"
        android:background="@null"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/playbtnnew"
        tools:layout_editor_absoluteX="-59dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/marquee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/playTrigger"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@string/merqutext"
        android:textColor="#ff4500"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/fblogo"
        android:layout_width="92dp"
        android:layout_height="101dp"
        android:layout_below="@+id/marquee"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginBottom="51dp"
        android:layout_toStartOf="@+id/websitelogo"
        android:layout_toLeftOf="@+id/websitelogo"
        android:gravity="center"
        app:srcCompat="@drawable/fblogo" />

    <ImageView
        android:id="@+id/websitelogo"
        android:layout_width="95dp"
        android:layout_height="105dp"
        android:layout_below="@+id/marquee"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:layout_marginBottom="52dp"
        android:gravity="center"
        app:srcCompat="@drawable/website" />

    <TextView
        android:id="@+id/tagline"
        android:layout_width="263dp"
        android:layout_height="26dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="133dp"
        android:layout_marginRight="133dp"
        android:layout_marginBottom="763dp"
        android:gravity="center"
        android:text="@string/tagline"
        android:textColor="@color/myorange"
        android:textSize="18sp" />

    <com.dreamso.radio.player.VisualizerView
        android:id="@+id/view_visualizer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="306dp"
        android:layout_marginBottom="249dp" />


</RelativeLayout>